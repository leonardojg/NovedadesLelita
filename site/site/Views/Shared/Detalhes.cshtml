@model Produtos

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImagemMiniaturaUrl" alt="" />
        <div class="caption">
            <h3 class="pull-right">@Model.Preco.ToString("c")</h3>
            <h3>
                <a asp-controller="Produto" asp-action="Details" asp-route-produtoId="@Model.ProdutoId">@Model.Nome</a>
            </h3>
            <p>@Model.DescricaoCurta</p>
        </div>
        <div class="addToCart text-right">
            <p class="button ">
                <a class="btn btn-success" id="cartButton" asp-controller="Carrinho" asp-action="AddCarrinho" asp-route-produtoId="@Model.ProdutoId">
                    Add ao Carrinho
                </a>
            </p>
        </div>
    </div>
</div>